static void swapInt(int *a, int *b) {
    int t = *a;
    *a = *b;
    *b = t;
}

int main(void) {
    int x, y;

    printf("Введите два целых числа x и y: ");
    if (scanf("%d %d", &x, &y) != 2) {
        printf("Ошибка ввода!\n");
        return 1;
    }

    printf("До обмена: x = %d, y = %d\n", x, y);
    swapInt(&x, &y);
    printf("После обмена: x = %d, y = %d\n", x, y);

    return 0;
}